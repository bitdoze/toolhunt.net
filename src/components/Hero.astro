---
import SearchBar from './SearchBar.astro';

interface Props {
  totalTools: number;
  shCount: number;
  toolsCount: number;
  macCount: number;
  alternativesCount: number;
}

const { totalTools, shCount, toolsCount, macCount, alternativesCount } = Astro.props;

const categories = [
  { name: 'Self-hosted Apps', count: shCount, color: 'blue' },
  { name: 'Online Tools', count: toolsCount, color: 'green' },
  { name: 'Mac Apps', count: macCount, color: 'purple' },
  { name: 'Alternatives', count: alternativesCount, color: 'indigo' }
];
---

<div class="relative isolate overflow-hidden bg-gradient-to-b from-transparent via-gray-50/30 to-transparent dark:via-gray-900/30">
  <div class="absolute inset-0 -z-10 overflow-hidden">
    <div class="absolute h-full w-full [mask-image:radial-gradient(ellipse_at_center,white,transparent)] bg-grid-gray-900/[0.03] dark:bg-grid-white/[0.03]"></div>
  </div>

  <div aria-hidden="true" class="absolute inset-0 -z-10">
    <div class="absolute left-1/3 top-1/4 h-64 w-64 rounded-full bg-blue-400/30 mix-blend-multiply blur-3xl animate-blob"></div>
    <div class="absolute right-1/3 top-1/3 h-64 w-64 rounded-full bg-purple-400/30 mix-blend-multiply blur-3xl animate-blob animation-delay-2000"></div>
    <div class="absolute left-1/2 bottom-1/4 h-64 w-64 rounded-full bg-pink-400/30 mix-blend-multiply blur-3xl animate-blob animation-delay-4000"></div>
  </div>

  <div class="mx-auto max-w-7xl px-6 py-20 sm:py-28 lg:px-8">
    <div class="mx-auto max-w-4xl text-center">
      <div class="mb-8 flex items-center justify-center">
        <div class="relative inline-flex">
          <div class="absolute -inset-px bg-gradient-to-r from-blue-500 via-purple-500 to-pink-500 rounded-full blur opacity-70 group-hover:opacity-100 transition duration-1000 group-hover:duration-200 animate-gradient-x"></div>
          <span class="relative inline-flex items-center rounded-full bg-white/90 dark:bg-gray-900/90 px-4 py-1.5 text-sm font-semibold text-blue-700 dark:text-blue-300 backdrop-blur-sm">
            {totalTools}+ Tools Available
            <span class="ml-2 h-2 w-2 rounded-full bg-blue-500 animate-ping"></span>
          </span>
        </div>
      </div>

      <h1 class="text-5xl font-bold tracking-tight sm:text-7xl mb-12">
        <span class="inline-block animate-gradient-text bg-clip-text text-transparent bg-gradient-to-r from-blue-600 via-purple-600 to-pink-600 dark:from-blue-400 dark:via-purple-400 dark:to-pink-400">
          Find the Perfect Tools
        </span>
        <br />
        <span class="text-gray-900 dark:text-white">for Your Workflow</span>
      </h1>

      <div class="grid grid-cols-2 sm:grid-cols-4 gap-4 sm:gap-6 mt-12">
        {categories.map(({ name, count, color }) => (
          <div class={`group relative overflow-hidden rounded-xl bg-white/90 dark:bg-gray-800/90 p-4 backdrop-blur-sm hover:shadow-lg transition duration-300 border border-${color}-100 dark:border-${color}-900`}>
            <div class={`absolute inset-0 bg-gradient-to-br from-${color}-500/10 to-transparent opacity-50`}></div>
            <dt class="text-sm font-medium text-gray-600 dark:text-gray-400 mb-2">{name}</dt>
            <dd class="flex items-baseline">
              <div class={`text-2xl font-bold text-${color}-600 dark:text-${color}-400`}>
                {count}
                <span class="ml-2 text-sm font-medium text-gray-500 dark:text-gray-400">tools</span>
              </div>
            </dd>
          </div>
        ))}
      </div>

      <div class="mt-12 flex flex-wrap justify-center gap-4">
        <a href="/sh/" class="group relative inline-flex items-center justify-center rounded-full bg-blue-600 px-6 py-3 text-sm font-semibold text-white shadow-lg shadow-blue-500/20 hover:bg-blue-500 hover:shadow-blue-500/30 transition-all duration-200">
          <span class="absolute inset-0 rounded-full bg-white/20 opacity-0 group-hover:opacity-100 transition-opacity duration-200"></span>
          Explore Self-Hosted Apps
        </a>
        <a href="/tools/" class="group relative inline-flex items-center justify-center rounded-full px-6 py-3 text-sm font-semibold text-gray-900 dark:text-white ring-1 ring-gray-900/10 dark:ring-white/10 hover:ring-gray-900/20 dark:hover:ring-white/20 transition-all duration-200">
          Browse Online Tools
          <span class="ml-2 transition-transform duration-200 group-hover:translate-x-1">→</span>
        </a>
        <a href="/mac/" class="group relative inline-flex items-center justify-center rounded-full px-6 py-3 text-sm font-semibold bg-gradient-to-r from-purple-500 to-pink-500 text-white shadow-lg shadow-purple-500/20 hover:shadow-purple-500/30 transition-all duration-200 hover:scale-105">
          <svg class="w-4 h-4 mr-2" viewBox="0 0 24 24" fill="none" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3c-1.5 0-2.5 1-3.5 1.5C7.5 5 6.5 5 5 5c0 2 .5 3 1 4 1.5 3 4 4 6 4s4.5-1 6-4c.5-1 1-2 1-4-1.5 0-2.5 0-3.5-.5C14.5 4 13.5 3 12 3z"/>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 13v8M8 17h8"/>
          </svg>
          Mac Apps
          <span class="ml-2 group-hover:rotate-45 transition-transform duration-300">↗</span>
        </a>
      </div>
    </div>
  </div>
</div>

<style>
  @keyframes blob {
    0% { transform: translate(0px, 0px) scale(1); }
    33% { transform: translate(30px, -50px) scale(1.1); }
    66% { transform: translate(-20px, 20px) scale(0.9); }
    100% { transform: translate(0px, 0px) scale(1); }
  }

  @keyframes gradient-x {
    0% { background-position: 0% 50%; }
    100% { background-position: 100% 50%; }
  }

  .animate-blob {
    animation: blob 7s infinite;
  }

  .animation-delay-2000 {
    animation-delay: 2s;
  }

  .animation-delay-4000 {
    animation-delay: 4s;
  }

  .animate-gradient-x {
    animation: gradient-x 3s linear infinite;
  }

  .animate-gradient-text {
    animation: gradient-x 4s linear infinite;
  }
</style>